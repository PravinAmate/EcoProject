<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CustomerOrderSuccesfulDetials">
    <android.support.v7.widget.RecyclerView
        android:id="@+id/listProductSerach1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/text_padding"
       android:layout_above="@+id/btnAddToCart"
        />
    <Button
        android:id="@+id/btnAddToCart"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Views Old Order"
        android:gravity="center"
        android:textSize="@dimen/button_text"
    android:textColor="@color/yelow_fent"
        android:layout_alignParentBottom="true"
        android:background="@color/dark"
        android:layout_margin="@dimen/passcode_width"
        />

</RelativeLayout>