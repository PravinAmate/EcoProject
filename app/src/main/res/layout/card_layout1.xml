<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:tag="cards main container">

    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        card_view:cardCornerRadius="@dimen/imgv_progress_history"
        card_view:cardElevation="@dimen/acc_margin_top"

        card_view:cardUseCompatPadding="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/imgv_progress_history">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="@dimen/imgv_progress_history"
                android:paddingTop="@dimen/imgv_progress_history"
                android:text="Order Placed Successfully"
                android:textSize="@dimen/sub_header_activity"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txtOrderDateTime"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="top"
                android:gravity="top"
                android:paddingBottom="@dimen/imgv_progress_history"
                android:text="2 APr 2019 at 17:21 PM"
                android:textSize="@dimen/tip_text_size" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/txtAmount"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="0.6"
                    android:text="2000"
                    android:textSize="@dimen/sub_header_activity"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/txtPaymentType"
                    android:layout_width="match_parent"

                    android:layout_height="wrap_content"
                    android:layout_gravity="top"

                    android:layout_weight="0.4"
                    android:gravity="top"
                    android:text="Cash On Delivery"
                    android:textSize="@dimen/small_text_contract"
                    android:textStyle="bold" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/btn_grey_sign_up"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/small_text_contract"

                    android:text="Shipping Details :" />

                <TextView
                    android:id="@+id/txtCustName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/passcode_width"
                    android:textSize="@dimen/small_text_contract"

                    android:text="Avinash B Sanglikar" />

                <TextView
                    android:id="@+id/txtCustAddress"
                    android:layout_width="match_parent"

                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/text_padding"
                    android:textSize="@dimen/small_text_contract"

                    android:text="Plot No SB, Kirti Housing Society Mangeskar Nagar, Mangalwar Peth, Kolhapure 416012" />
                <TextView
                    android:id="@+id/txtCustMobNo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/text_padding"
                    android:textSize="@dimen/small_text_contract"

                    android:text="9145268723" />


            </LinearLayout>
        </LinearLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>
